<Page
    x:Class="UniformApp.View.FrontPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniformApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="DarkGreen">

    <Page.Resources>
        <Style x:Key="ButtonStyling" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Height" Value="70"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="55"/>
        </Style>
    </Page.Resources>

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="ROYAL UNIBREW" Grid.Column="1" Style="{StaticResource TitleStyle}"/>
        <Button Name="K1" Content="K1" Grid.Column="0" Grid.Row="1" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K2" Content="K2" Grid.Column="1" Grid.Row="1" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K3" Content="K3" Grid.Column="2" Grid.Row="1" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K4" Content="K4" Grid.Column="0" Grid.Row="2" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K5" Content="K5" Grid.Column="1" Grid.Row="2" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K6" Content="K6" Grid.Column="2" Grid.Row="2" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K7" Content="K7" Grid.Column="0" Grid.Row="3" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K8" Content="K8" Grid.Column="1" Grid.Row="3" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K9" Content="K9" Grid.Column="2" Grid.Row="3" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K10" Content="K10" Grid.Column="0" Grid.Row="4" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K11" Content="K11" Grid.Column="1" Grid.Row="4" Style="{StaticResource ButtonStyling}"/>
        <Button Name="K12" Content="K12" Grid.Column="2" Grid.Row="4" Style="{StaticResource ButtonStyling}"/>

    </Grid>
</Page>
