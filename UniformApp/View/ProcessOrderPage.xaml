<Page
    x:Class="UniformApp.View.ProcessOrderPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniformApp.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="using:UniformApp.ViewModel"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.DataContext>
        <viewModel:ProcessOrderViewModel/>
    </Page.DataContext>

    <Pivot Name = "ContentPivot">
        <!-- Front Page-->
        <PivotItem Name="FrontPagePivotItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button Name="NewButton" Content="New ProcessOrder" Grid.Column="1" Grid.Row="1" 
                        Height="50" Width="200" Click="NewButton_OnClick"/>
                <Button Name="ExistingButton" Content="Existing ProcessOrder" Grid.Column="2" Grid.Row="1"  
                        Height="50" Width="200" Click="ExistingButton_OnClick"/>
                <!--<ListView ItemsSource="{Binding ProcessOrderCatalog.ProcessOrderList, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding ProcessOrderNo, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding ProcessOrderDate, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding BatchCode, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding IsComplete, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding ColumnNo, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding ProductNo, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding Employee, Mode=TwoWay}"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>-->
            </Grid>
        </PivotItem>
        <!--New ProcessOrder Page-->
        <PivotItem Name="NewProcessOrderPivotItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>

                </Grid.RowDefinitions>
                <TextBlock Text="Process Order Number" Grid.Column="1" Grid.Row="1" Height="50" Width="200"/>
                <TextBox Grid.Column="2" Grid.Row="1" Height="50" Width="200" Text="{Binding NewProcessOrder.ProcessOrderNo, Mode=TwoWay}"/>
                <TextBlock Text="EmployeeNumber" Grid.Column="1" Grid.Row="2" Height="50" Width="200"/>

                <ComboBox Name="EmployeeComboBox" Grid.Column="2" Grid.Row="2" ItemsSource="{Binding EmployeeCatalog.EmployeeList, Mode=TwoWay}" SelectedItem="{Binding EmployeeCatalog.TargetEmployee, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Initials}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="BatchCode" Grid.Column="1" Grid.Row="3" Height="50" Width="200"/>
                <TextBox Grid.Column="2" Grid.Row="3" Height="50" Width="200" Text="{Binding NewProcessOrder.BatchCode, Mode=TwoWay}"/>
                <StackPanel Grid.Row="4" Grid.Column="1">
                    <TextBlock Text="Product" Grid.Column="1" Grid.Row="4" Height="50" Width="200"/>
                    <!--<TextBlock Text="Column Number" Grid.Column="1" Grid.Row="4" Height="50" Width="200"/>-->
                </StackPanel>
                <StackPanel Grid.Row="4" Grid.Column="2">
                    <ComboBox Name="ProductComboBox" ItemsSource="{Binding ProductCatalog.ProductList, Mode=TwoWay}" SelectedItem="{Binding ProductCatalog.TargetProduct, Mode=TwoWay}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding ProductName}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <!--<TextBox Grid.Column="2" Grid.Row="4" Height="50" Width="200" Text="{Binding NewProcessOrder.ColumnNo, Mode=TwoWay}"/>-->
                </StackPanel>
                <Button Name="OpretKnap" Content="Opret" Command="{Binding CreateProcessOrderCommand}" Grid.Column="3" Grid.Row="5" Height="50" Width="100"/>
                <Button Name="BackButton" Content="Back" Grid.Column="0" Grid.Row="0" Click="BackButton_OnClick"/>
            </Grid>
        </PivotItem>
        <!--Existing ProcessOrder Page-->
        <PivotItem Name="ExistingProcessOrderPivotItem">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>

                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <ListView Grid.Column="1" Grid.Row="1" ItemsSource="{Binding ProcessOrderCatalog.ProcessOrderList, Mode=TwoWay}" SelectedItem="{Binding ProcessOrderCatalog.TargetProcessOrder, Mode=TwoWay}">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock Text="{Binding ProcessOrderNo, Mode=TwoWay}"/>
                                <!--<TextBlock Text="{Binding ProcessDate, Mode=TwoWay}"/>-->
                                <TextBlock Text="{Binding BatchCode, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding IsComplete, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding ColumnNo, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding ProductNo, Mode=TwoWay}"/>
                                <TextBlock Text="{Binding Employee, Mode=TwoWay}"/>
                            </StackPanel>
                        </DataTemplate>

                    </ListView.ItemTemplate>
                </ListView>
                <Button Content="Vælg" Grid.Column="3" Grid.Row="2" Height="50" Width="100" Click="ButtonBase_OnClick"/>
                <Button Name="BackButton2" Content="Tilbage" Grid.Column="0" Grid.Row="0" Click="BackButton_OnClick"/>
            </Grid>
        </PivotItem>
    </Pivot>
</Page>