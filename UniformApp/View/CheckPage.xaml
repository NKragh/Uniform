                <TextBox PlaceholderText="####" Grid.Row="2" Grid.Column="1" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="##:##" Grid.Row="2" Grid.Column="2" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="3" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="4" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="5" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="6" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>

                <Button Name="REGISTRER2" Content="REGISTRER" Grid.Row="3" Grid.Column="4" Height="90" Width="175" HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGreen" Foreground="Black" FontSize="30" FontWeight="Bold"/>
                <Button Name="ResetData" Content="Nulstil" Grid.Row="3" Grid.Column="3" Height="90" Width="175" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" Foreground="Black" FontSize="30" FontWeight="Bold"/>
            </Grid>
        </PivotItem>
        <PivotItem Name="PETCheckPage">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
