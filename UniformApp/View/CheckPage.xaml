                <Button Name="ResetData2" Content="Nulstil" Grid.Row="3" Grid.Column="3" Height="90" Width="175" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red" Foreground="Black" FontSize="30" FontWeight="Bold"/>

