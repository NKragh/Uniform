                <Button Name="Comment" Content="Bemærkninger" Grid.Row="2" Grid.Column="7" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Top" Background="CornflowerBlue" Foreground="White" FontSize="25"/>

                <TextBox PlaceholderText="####" Grid.Row="2" Grid.Column="0" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="##:##" Grid.Row="2" Grid.Column="1" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="2" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
                <TextBox PlaceholderText="Indtast værdi" Grid.Row="2" Grid.Column="3" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
