                <TextBox PlaceholderText="Indtast værdi"  Grid.Row="2" Grid.Column="6" Height="75" Width="175" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="White" Foreground="Black" FontSize="25"/>
