                <TextBlock Text="Our strategy - A solid foundation for the future" Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4" Foreground="White" HorizontalAlignment="Center"  VerticalAlignment="Bottom" FontWeight="Bold" FontSize="20"/>
